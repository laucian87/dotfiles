[user]
    name = Theodore Robert Campbell Jr
    email = trcjr@stupidfoot.com
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[color]
    ui = true
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[alias]
    add-modified = "!f() { git diff --name-status -r | sed 's/^M\\s\\(.*\\)/\"\\1\"/'; }; echo `f` | xargs -n 1 git add"
    br = branch
    changes = diff --name-status -r
    ci = commit
    co = checkout
    df = diff
    diff-staged = diff --cached
    diffstat = diff --stat -r
    lgg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %f %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    lgg2 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %Cblue[%Creset%cn%Cblue]%Creset %f %Cgreen(%cr) %Creset' --abbrev-commit --date=relative
    lg = log -p
    st = status
    unadd = update-index --force-remove
    unstage = reset
[branch]
    autosetupmerge = true
[merge]
    verbosity = 5
